<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:stretchColumns="*"

    >

    <TableRow>

        <TextView
            android:id="@+id/tvMath"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_span="4"
            android:textColor="#EDEFF3"
            android:text="0"
            android:gravity="right"/>

    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_span="4"
            android:textColor="#fff"
            android:text="0"
            android:gravity="right"/>

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnNULL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_span="3"
            android:backgroundTint="#252523"
            android:padding="15dp"
            />

        <Button
            android:id="@+id/btndelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#252523"
            android:padding="15dp"
            android:text="delete"
            android:textColor="#fff"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="("
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text=")"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#252523"
            android:padding="20dp"
            android:text="*"
            android:textColor="#fff"
            android:textSize="40dp"

            />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="7"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="8"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="9"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#252523"
            android:padding="20dp"
            android:text="/"
            android:textColor="#fff"
            android:textSize="40dp"

            />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="4"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="5"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="6"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_margin="3dp"
            android:backgroundTint="#252523"
            android:padding="20dp"
            android:text="+"
            android:textColor="#fff"
            android:textSize="40dp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="1"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="2"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="3"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#252523"
            android:padding="20dp"
            android:text="-"
            android:textColor="#fff"
            android:textSize="40dp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="."
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_nguyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#5C5C57"
            android:padding="20dp"
            android:text="in"
            android:textColor="#fff"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="#252523"
            android:padding="20dp"
            android:text="="
            android:layout_span="1"
            android:textColor="#fff"
            android:textSize="40dp" />


    </TableRow>
</TableLayout>